<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEAE7"
    tools:context=".account.LoginFragment">

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/indian_flag"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_80sdp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/loginBtn"
        android:orientation="vertical">
        <ImageView
            android:adjustViewBounds="true"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designing stunning posters for"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Festival"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/green_color_picker"/>
                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/business"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_color_picker"/>
                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&amp;"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:fontFamily="@font/calibrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/political"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="#FF5722"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/top_rounded_bg"
        android:id="@+id/loginBtn"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/calibrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome To "
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="@font/calibrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/app_color"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:fontFamily="@font/calibrid"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please login your account to continue"
            android:textColor="@color/gray_darl"
            android:textSize="15dp"
            android:textStyle="normal" />


        <RelativeLayout
            android:id="@+id/phone_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#3F51B5">

            <TextView
                android:fontFamily="@font/calibrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="@string/continue_with_phone"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="#6BFFFFFF"
                android:padding="11dp"
                android:src="@drawable/ic_call"
                app:tint="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/whatsapp_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#4CAF50">

            <TextView
                android:fontFamily="@font/calibrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="@string/continue_with_whatsapp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="#6BFFFFFF"
                android:padding="8dp"
                android:src="@drawable/ic_whatsapp"
                app:tint="@color/white" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:id="@+id/google_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#BA1E1E">

            <TextView
                android:fontFamily="@font/calibrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="@string/continue_with_google"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="#6BFFFFFF"
                android:padding="10dp"
                android:src="@drawable/googleg_standard_color_18"
                app:tint="@color/white" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>