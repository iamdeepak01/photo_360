<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="music"
            type="com.visticsolution.posterbanao.model.MusicModel" />
    </data>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="#68888888"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_7sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/video_filter_eight"
                android:scaleType="centerCrop"
                android:imageURL="@{music.thumbnail}"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{music.title}"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/play_btn"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/play"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingVertical="0dp"
                    android:paddingLeft="@dimen/_10sdp"
                    app:icon="@drawable/exo_icon_play"
                    app:iconSize="@dimen/_16sdp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selec_btn"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/btn"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/select"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingVertical="0dp"
                    android:paddingLeft="@dimen/_10sdp"
                    app:icon="@drawable/ic_right"
                    app:iconSize="@dimen/_16sdp"/>

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/premium_tag"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isPremium="@{music.premium}">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_crown" />

        </RelativeLayout>


    </LinearLayout>
</layout>
