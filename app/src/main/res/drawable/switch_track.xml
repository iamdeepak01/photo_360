<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_100sdp" />
            <gradient android:type="sweep" android:startColor="#A8A8A8" android:centerColor="#FFFFFF" android:endColor="#A8A8A8" />
            <stroke android:color="#FFFFFF" android:width="1dp"/>
            <size android:height="20dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_100sdp" />
            <gradient android:type="sweep" android:startColor="#4CAF50" android:centerColor="#8BC34A" android:endColor="#FF4CAF50" />
            <stroke android:color="@color/white" android:width="1dp"/>
            <size android:height="20dp" />
        </shape>
    </item>
</selector>